<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="@string/bookmark_inactive_name"
                android:pathData="@string/path_bookmark_mini"
                android:fillColor="@color/colorUnsplashButtonGreyLight"
                android:fillAlpha="0"
                android:strokeWidth="2"/>
            <path
                android:name="@string/bookmark_active_name"
                android:pathData="@string/path_bookmark"
                android:fillColor="@color/colorSecondary"
                android:fillAlpha="1"
                android:strokeWidth="2"/>
        </vector>
    </aapt:attr>
    <target android:name="@string/bookmark_inactive_name">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="300"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="@string/bookmark_active_name">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:duration="300"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="300"
                    android:valueFrom="@string/path_bookmark"
                    android:valueTo="@string/path_bookmark_mini"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
