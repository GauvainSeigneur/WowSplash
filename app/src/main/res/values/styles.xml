<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget" parent="WowTheme" />

    <style name="Widget.BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="itemHorizontalTranslationEnabled">false</item>
        <!--<item name="itemIconSize">@dimen/bottom_nav_icon_size</item> -->
        <item name="itemIconTint">@drawable/selector_item_menu_bottom_nav</item>
        <item name="itemTextColor">@drawable/selector_item_menu_bottom_nav</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="Widget.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:outlineAmbientShadowColor" tools:targetApi="28">@color/colorSecondary</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="28">@color/colorSecondary</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button"></style>

    <style name="Widget.AppbarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Tabs" parent="Widget.MaterialComponents.TabLayout" />

</resources>
